unit Form_Tipo;

interface

Function Form_Tipo_Show : Boolean;

implementation
Uses
  uGlobal,
  uConexion,
  Vcl.Forms,
  uTable_Info,
  uManager_Form,
  uManager_Field,
  System.SysUtils;

Type
  TMTipo = Class(TMForm)

  End;

Function Form_Tipo_Show : Boolean;
Var
  lForm : TMTipo;
Begin
  lForm := TMTipo.CreateNew(Application, gMGlobal.CNX, gMTable.Items[Table001_Tipo_Item].TableName, gMTable.Items[Table001_Tipo_Item].Caption);
  lForm.FormStyle := fsMDIChild;
  lForm.Visible := False;
  lForm.PAGE.MRECORD.MField.AddEdit('Código', 'TIPO_ITEM_CODIGO', 0, 0, 0, [mfShowGrid], []);
  lForm.Prepare;
  lForm.Show;
//  FreeAndNil(lForm);
End;


end.
